# === Frontend (Next.js) ===
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=changeme-secure-secret-for-nextauth

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Sentry monitoring
SENTRY_DSN=
SENTRY_ENV=development

# === Backend (NestJS) ===
API_PORT=8080
API_LOG_LEVEL=debug
JWT_SECRET=changeme-secure-jwt-secret-key

# Rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# === Database (PostgreSQL) ===
DATABASE_URL=postgresql://app_user:password@db:5432/appdb?schema=public
POSTGRES_USER=app_user
POSTGRES_PASSWORD=password
POSTGRES_DB=appdb

# === Redis (Caching & Sessions) ===
REDIS_URL=redis://redis:6379/0

# === Email (SMTP) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@marketingkreis.ch

# === File Storage (AWS S3) ===
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-central-1
AWS_S3_BUCKET=marketing-kreis-assets

# === Security ===
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true

# === Monitoring & Analytics ===
LOG_LEVEL=info
ENABLE_SWAGGER=true

# === Development ===
NODE_ENV=development
HOT_RELOAD=true
DEBUG_MODE=false
