# Production Environment Configuration
APP_NAME=MarketingKreis Platform
ENVIRONMENT=production
DEBUG=false

# Database (PostgreSQL)
DATABASE_URL=postgresql+psycopg2://postgres:CHANGE_ME_PROD_PASSWORD@db:5432/marketingkreis

# JWT Authentication (MUST CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=CHANGE-ME-USE-python3-c-import-secrets-print-secrets-token-urlsafe-64
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# Cookie Settings
COOKIE_DOMAIN=
COOKIE_SECURE=true
COOKIE_SAMESITE=strict
COOKIE_ACCESS_NAME=access_token
COOKIE_REFRESH_NAME=refresh_token

# Redis
REDIS_URL=redis://redis:6379/0
RQ_DEFAULT_QUEUE=default

# CORS (Update with your production domain)
BACKEND_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Sentry
SENTRY_DSN=
SENTRY_ENV=production
