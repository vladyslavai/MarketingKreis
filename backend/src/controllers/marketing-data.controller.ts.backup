import {
  Controller,
  Get,
  Post,
  Put,
  Delete,
  Body,
  Param,
  Query,
  Request,
  UseGuards,
  ParseIntPipe,
  DefaultValuePipe
} from '@nestjs/common';
import { ApiTags, ApiOperation, ApiResponse, ApiBearerAuth, ApiQuery } from '@nestjs/swagger';
import { MarketingDataService } from '../services/marketing-data.service';
import { CreateMarketingDataDto, UpdateMarketingDataDto } from '../dto/marketing-data.dto';
import { JwtAuthGuard } from '../auth/jwt-auth.guard';

@ApiTags('Marketing Data')
// @ApiBearerAuth()
// @UseGuards(JwtAuthGuard)
@Controller('marketing-data')
export class MarketingDataController {
  constructor(private readonly marketingDataService: MarketingDataService) {}

  @Get()
  @ApiOperation({ summary: 'Get all marketing data entries' })
  @ApiQuery({ name: 'page', required: false, type: Number })
  @ApiQuery({ name: 'limit', required: false, type: Number })
  @ApiQuery({ name: 'search', required: false, type: String })
  @ApiQuery({ name: 'category', required: false, type: String })
  @ApiQuery({ name: 'status', required: false, type: String })
  @ApiQuery({ name: 'year', required: false, type: Number })
  async getAll(
    @Request() req: any,
    @Query('page', new DefaultValuePipe(1), ParseIntPipe) page: number,
    @Query('limit', new DefaultValuePipe(50), ParseIntPipe) limit: number,
    @Query('search') search?: string,
    @Query('category') category?: string,
    @Query('status') status?: string,
    @Query('year', new DefaultValuePipe(null)) year?: number
  ) {
    return this.marketingDataService.getAll(
      'temp-user-id', // req.user.userId,
      page,
      limit,
      search,
      category,
      status,
      year
    );
  }

  @Get('stats')
  @ApiOperation({ summary: 'Get marketing data statistics' })
  @ApiQuery({ name: 'year', required: false, type: Number })
  async getStats(
    @Request() req: any,
    @Query('year', new DefaultValuePipe(null)) year?: number
  ) {
    return this.marketingDataService.getStats('temp-user-id', year);
  }

  @Get(':id')
  @ApiOperation({ summary: 'Get marketing data entry by ID' })
  async getById(@Request() req: any, @Param('id') id: string) {
    return this.marketingDataService.getById(id, 'temp-user-id');
  }

  @Post()
  @ApiOperation({ summary: 'Create new marketing data entry' })
  @ApiResponse({ status: 201, description: 'Marketing data entry created successfully' })
  async create(@Request() req: any, @Body() dto: CreateMarketingDataDto) {
    return this.marketingDataService.create('temp-user-id', dto);
  }

  @Post('import')
  @ApiOperation({ summary: 'Import data from localStorage format' })
  @ApiResponse({ status: 201, description: 'Data imported successfully' })
  async importFromLocalStorage(@Request() req: any, @Body() data: any[]) {
    return this.marketingDataService.importFromLocalStorage('temp-user-id', data);
  }

  @Put(':id')
  @ApiOperation({ summary: 'Update marketing data entry' })
  async update(
    @Request() req: any,
    @Param('id') id: string,
    @Body() dto: UpdateMarketingDataDto
  ) {
    return this.marketingDataService.update(id, 'temp-user-id', dto);
  }

  @Delete(':id')
  @ApiOperation({ summary: 'Delete marketing data entry' })
  async delete(@Request() req: any, @Param('id') id: string) {
    return this.marketingDataService.delete(id, 'temp-user-id');
  }
}





