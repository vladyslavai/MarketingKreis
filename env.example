# Database - PostgreSQL (Primary)
DATABASE_URL="postgresql://app_user:password@db:5432/appdb?schema=public"

# Database - Connection Pooling (Production)
DATABASE_POOL_URL="postgresql://app_user:password@pgbouncer:6432/appdb?schema=public"

# PostgreSQL Configuration
POSTGRES_DB="appdb"
POSTGRES_USER="app_user"
POSTGRES_PASSWORD="password"

# Frontend URL
FRONTEND_URL="http://localhost:3000"

# Backend API
API_URL="http://localhost:3001"
PORT=3001

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# JWT
JWT_SECRET="your-jwt-secret-here"

# Database Backup Configuration
BACKUP_RETENTION_DAYS="7"
BACKUP_DIR="./backups"

# Development Database (SQLite fallback)
# DATABASE_URL="file:./dev.db"

# Optional: Email configuration
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com" 
# SMTP_PASSWORD="your-app-password"

# Sentry Configuration
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_ENV="development"
NEXT_PUBLIC_SENTRY_ENV="development"
RELEASE_VERSION="local"
NEXT_PUBLIC_RELEASE_VERSION="local"

# Logging Configuration
LOG_LEVEL="info"
SERVER_NAME="marketing-kreis-backend"

# Redis Configuration
REDIS_URL="redis://redis:6379/0"

# Rate Limiting Configuration
RATE_LIMIT_TTL=900
RATE_LIMIT_MAX=100

# Optional: File storage
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret"
# AWS_REGION="eu-central-1"
# AWS_S3_BUCKET="marketing-kreis-assets"
